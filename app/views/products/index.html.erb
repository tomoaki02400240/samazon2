<div class="row justify-content-center">
  <div class="col-2">
    <%= render partial: "layouts/sidebar", locals: {categories: @categories, major_category_names: @major_category_names} %>
  </div>
  <div class="col-md-9">
    <div class="container">
      <% if @category.present? %>
        <%= link_to "トップ", products_path, category: @major_catagory_name %>><%= @category.name %>
        <h1><%= @category.name %>の商品一覧<%= @products.count %>件</h1>

        <%= form_with url: products_path, method: :get, local: true, class: "form-inline" do |f| %>
              <%= f.hidden_field :sort_category, value: @category.id %>
              並び替え
              <% if @s.present? %>
                <%= f.select :sort, @sort_list, selected: @s, onChange: "javascript: this.form.submit();", class: "form-inline ml-2" %>
              <% else %>
                <%= f.select :sort, @sort_list, {}, onChange: "javascript: this.form.submit();", class: "form-inline ml-2" %>
              <% end %>
            <% end %>
      
        <% end %>
        <% if @category.blank? %>
          <h3>商品一覧</h3>
        <% end %>
    </div>
    <div class="container mt-4">
      <div class="row w-100">
        <% @products.each do |product| %>
        <div class="col-3">
          <%= link_to product_path(product) do %>
            <%= image_tag "/images/dummy.png", class: "img-thumbnail" %>
          <% end %>
          <div class="row">
            <div class="col-12">
              <p class="samazon-product-label mt-2 text-md-center">
                <%= product.name %><br/>
                <label>¥<%= product.price %></label>
              </p>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
    <%= paginate @products %>
  </div>
</div>