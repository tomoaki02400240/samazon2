<div class="row justify-content-center">
  <div class="col-2">
    <%= render partial: "layouts/sidebar", locals: {categories: @categories, major_category_names: @major_category_names} %>
  </div>
  <div class="col-md-9">
    <div class="container mt-4">
      <div class="row w-100">
        <% @products.each do |product| %>
        <div class="col-3">
          <%= link_to product_path(product) do %>
            <%= image_tag "/images/dummy.png", class: "img-thumbnail" %>
          <% end %>
          <div class="row">
            <div class="col-12">
              <p class="samazon-product-label mt-2 text-md-center">
                <%= product.name %><br/>
                <label>Â¥<%= product.price %></label>
              </p>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
    <%= paginate @products %>
  </div>
</div>