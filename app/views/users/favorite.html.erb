  <div class="w-75" style="margin: 0 auto">
    <h1>お気に入り</h1>
  </div>
<div class="container d-flex justify-content-center">
  <div class="row">
    <% @favorites.each do |favorite| %>
      <div class="col-md-8 mt-2">
        <div class="d-flex">
          <%= link_to product_path(favorite), claass: "w-25" do%>
            <%= image_tag "/images/dummy.png", class: "img-fuild", style: "width: 100px;"%>
          <% end %>
          <div class="container mt-3">
            <h5 class="w-100 samazon-favorite-item-text"><%= favorite.name %></h5>
            <h6 class="w-100 samazon-favorite-item-text"><%= favorite.price%></h6>
          </div>
        </div>
      </div>
      <div class="col-md-2 d-flex align-items-center justify-content-end">
        <%= link_to product_path(favorite), class: "samazon-favorite-item-delete" do %>
          削除
        <% end %>
      </div>
      <div class="col-md-2 d-flex align-item-center justify-content-end">
        <button type="submit" class="btn samazon-favorite-add-cart text-white w-100">カートに入れる</button>
      </div>
    <% end %>
  </div>
</div>