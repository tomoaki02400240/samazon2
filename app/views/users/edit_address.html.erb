<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-5">
      <span>
        <%= link_to "マイページ", mypage_users_path %> > お届け先変更
      </span>
      <h3 class="mt-3 mb-3">お届け先変更</h3>

      <hr>

      <%= form_with(model: @user, url: mypage_users_path, method: :put, local: true) do |f| %>
        <div class="row form-group">
          <%= f.label :name, '氏名<span class="ml-1 samazon-require-input-label"><span class="samazon-require-input-label-text">必須</span></span>'.html_safe, class: 'col-md-5 col-form-label text-md-left d-flex align-items-center'%>
          <div class="col-md-7">
            <%=
              f.text_field :name,
              class: "form-control #{"is-invalid" if @user.errors.messages[:name].present?} samazon-login-input",
              autoforcus: true,
              required: "",
              autocomplete: "name",
              placeholder: "侍　太郎"
            %>

            <% if @user.errors.messages[:name].present? %>
              <span class="samazon-error-message">
                <strong><%= @user.errors.full_messages_for(:name).first %></strong>
              </span>
            <% end %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :postal_code, '郵便番号<span class="ml-1 samazon-require-input-label"><span class="samazon-require-input-label-text">必須</span></span>'.html_safe, class: "col-md-5 col-form-label text-md-left" %>
          <div class="col-md-7">
            <%= 
            f.text_field :postal_code,
            class: "form-control #{"is-invalid" if @user.errors.messages[:postal_code].present?} samazon-login-input",
            require: "",
            value: @user.postal_code
            %>
          </div>
        </div>

        <div class="row form-group">
          <%= f.label :address, '住所<span class="ml-2 samazon-require-input-label"><span class="samazon-require-input-label-text">必須</span></span>'.html_safe, class: "col-md-5 col-form-label text-md-left" %>
          <div class="col-md-7">
            <%=
              f.text_field :address,
              class: "form-control #{"is-invalid" if @user.errors.messages[:address].present?} samazon-login-input",
              required: "",
              placeholder: "東京都渋谷区道玄坂２丁目11-1"
            %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :phone, '電話番号<span class="ml-2 samazon-require-input-label"><span class="samazon-require-input-label-text">必須</span></span>'.html_safe, class: "col-md-5 col-form-label text-md-left" %>
          <div class="col-md-7">
            <%= 
              f.text_field :phone,
              class: "form-control #{"is-invalid" if @user.errors.messages[:phone].present? } samazon-login-input",
              required: "",
              placeholder: "03-5790-9039"
            %>
          </div>
        </div>

        <div class="row form-group">
          <%= f.label :email, 'メールアドレス<span class="ml-2 samazon-require-input-label"><span class="samazon-require-input-label-text">必須</span></span>'.html_safe, class: "col-md-5 col-form-label text-md-left" %>
          <div class="col-md-7">
            <%= 
              f.email_field :email,
              class: "form-control #{"is-invalid" if @user.errors.messages[:email].present?} samazon-login-input",
              required: "",
              autoforcus: true,
              autocomplete: "email",
              placeholder: "メールアドレス"
            %>

            <% if @user.errors.messages[:email].present? %>
              <span class="samazon-error-message">
                <strong><%= @user.errors.full_messages_for(:email).first %></strong>
              </span>
            <% end %>
          </div>
        </div>

        <hr>

        <div class="form-group d-flex justify-content-end">
          <%= f.submit '保存する', class: 'btn samazon-submit-button w-25'%>
        </div>
      <% end %>
    </div>
  </div>
</div>